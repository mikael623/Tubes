<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff04112F"
    tools:context=".KuisKelas7">

    <TextView
        android:id="@+id/textViewWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="00:30"
        android:padding="24dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vi"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="No."
        android:textSize="24sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewNo"
        android:gravity="bottom"
        android:layout_alignTop="@+id/textViewNo"
        android:layout_alignBottom="@+id/textViewNo"
        android:paddingBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="/22"
        android:textColor="#ff4D5B7C" />

    <View
        android:id="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textViewWaktu"
        android:background="#ff4D5B7C"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_below="@+id/vi"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewSoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="Soal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </ScrollView>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPrev"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_radio_background"
            android:button="@null"
            android:drawableRight="@drawable/custom_radio_button"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="#fff"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_radio_background"
            android:button="@null"
            android:drawableRight="@drawable/custom_radio_button"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="#fff"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_radio_background"
            android:button="@null"
            android:drawableRight="@drawable/custom_radio_button"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="#ffffff"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_radio_background"
            android:button="@null"
            android:drawableRight="@drawable/custom_radio_button"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:textColor="#ffffff"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/custom_radio_background"
            android:button="@null"
            android:drawableRight="@drawable/custom_radio_button"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, "
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/buttonPrev"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_arrow_left"
        android:text="Sebelumnya"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/buttonSelesai"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonPrev"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:background="@drawable/custom_button"
        android:text="Selesai"
        android:textColor="#ffffff"
        app:backgroundTint="@null" />

    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/buttonPrev"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_arrow_right_56"
        android:text="Sebelumnya"
        app:backgroundTint="@null" />

</RelativeLayout>